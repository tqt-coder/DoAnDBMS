@model Book.Models.Sach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form action="" class="detail" method="POST">
    <nav class="detail-img">
        <img class="img" src=@Html.DisplayFor(model => model.HinhAnh)>
    </nav>
    <nav class="detail-item">
        <div id="name">@Html.DisplayFor(model => model.TenSach)</div>
        <div id="cost">@Html.DisplayFor(model => model.GiaBan)</div>
        <div id="ship">Free</div>
        <div id="type"></div>
        <div>
            <input class="change" onclick="var result = document.getElementById('number'); var qty = result.value; if( !isNaN(qty) & qty > 1) result.value--;return false;" type='button' value='-' />
            <input type="text" min="1" id="number" value="1">
            <input class="change" onclick="var result = document.getElementById('number'); var qty = result.value; if( !isNaN(qty)) result.value++;return false;" type='button' value='+' />
        </div>
        <div class="button">
            <button class="tobasket" onclick="">Add</button>
            <button class="buy" type="submit">Buy</button>
        </div>
    </nav>
</form>